/* 转盘 */

.canvas-container ul, .canvas-container li {
  margin: 0;
  padding: 0;
  list-style: none;
}

.canvas-container {
  border: 8px solid rgb(84, 46, 20);
  padding: 2px;
  margin: 0 auto;
  position: relative;
  left: 0;
  top: 0;
  width: 330px;
  height: 330px;
  border-radius: 50%;
  /*border: 2px solid #E44025;*/
  box-shadow: 0 4rpx 6rpx #333, 0 0 4rpx #000;
}

.canvas-content {
  box-sizing: content-box;
  border: 2px solid rgb(84, 46, 20);
  position: absolute;
  left: 5px;
  top: 5px;
  z-index: 1;
  display: block;
  width: 300px;
  height: 300px;
  border-radius: inherit;
  background-clip: padding-box;
  background-color: rgb(206, 176, 145);
}

.canvas-element {
  position: relative;
  z-index: 1;
  width: inherit;
  height: inherit;
  border-radius: 50%;
}

.canvas-list {
  position: absolute;
  left: 0;
  top: 0;
  width: inherit;
  height: inherit;
  z-index: 9999;
}

.canvas-item {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  color: rgb(84, 46, 20);
  font-family: "楷体";
  font-weight: bold;
  text-shadow: 0 1px 1px rgba(255, 255, 255, 0.6);
}

.canvas-item-text {
  position: relative;
  display: block;
  margin: 0 auto;
  padding-top: 10rpx;
  text-align: center;
  -webkit-transform-origin: 50% 150px;
  transform-origin: 50% 150px;
}

/* 使用媒体查询处理金元宝的大小和位置：屏幕400-600： */

@media (min-width:400px) and (max-width:599px) {
  .canvas-item image {
    width: 160rpx;
    transform: translateY(140rpx);
  }

  .canvas-item:nth-of-type(4) image {
    width: 100rpx;
    transform: translateY(140rpx);
  }

  .canvas-item:nth-of-type(5) image {
    width: 120rpx;
    transform: translateY(140rpx);
  }

  .canvas-item:nth-of-type(2) image {
    width: 180rpx;
    transform: translateY(150rpx);
  }

  .canvas-item:nth-of-type(6) image {
    width: 140rpx;
    transform: translateY(140rpx);
  }
}

/* 使用媒体查询处理金元宝的大小和位置：屏幕300-350： */

@media (min-width:300px) and (max-width:350px) {
  .canvas-item image {
    width: 200rpx;
    transform: translateY(240rpx);
  }

  .canvas-item:nth-of-type(4) image {
    width: 140rpx;
    transform: translateY(240rpx);
  }

  .canvas-item:nth-of-type(5) image {
    width: 180rpx;
    transform: translateY(240rpx);
  }

  .canvas-item:nth-of-type(2) image {
    width: 240rpx;
    transform: translateY(240rpx);
  }

  .canvas-item:nth-of-type(6) image {
    width: 220rpx;
    transform: translateY(230rpx);
  }

  .canvas-item:nth-of-type(1) image {
    width: 220rpx;
    transform: translateY(230rpx);
  }

  .canvas-item:nth-of-type(3) image {
    width: 200rpx;
    transform: translateY(230rpx);
  }
}

/* 使用媒体查询处理金元宝的大小和位置：屏幕350-400： */

@media (min-width:350px) and (max-width:400px) {
  .canvas-item image {
    width: 100rpx;
    transform: translateY(180rpx);
  }

  .canvas-item:nth-of-type(4) image {
    width: 120rpx;
    transform: translateY(200rpx);
  }

  .canvas-item:nth-of-type(5) image {
